<%- include ../partials/header.ejs %>

<!-- Contents for the Add_Edit Contacts page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <br>
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= item._id %>"
                    >
                    <label for="itemTextField">Contact Name</label>
                    <input type="text" class="form-control"
                        id="itemTextField"
                        placeholder="Enter the Contact Name"
                        name="item" 
                        value="<%= item.item %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="QtyTextField">Contact Number</label>
                    <input type="number" class="form-control"
                    id="QtyTextField"
                    placeholder="Enter the Contact Number"
                    name="qty" 
                    value="<%= item.qty %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="statusTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="statusTextField"
                    placeholder="Enter an Email Address"
                    name="status" 
                    value="<%= item.status %>"
                    >
                </div>
                <br/>
                <div class="form-group">
                    <label for="tagTextArea">Membership </label>
                    <textarea type="text" class="form-control"
                    id="tagTextArea"
                    placeholder="Enter the membership type of this person"
                    name="tags" 
                    required>
                    <%= item.tags %>
                    </textarea>
                </div>
                <br/>

                <button class="btn btn-primary" type="submit">
                    <% if(buttonText == "Add"){ %>
                        <i class="fa-solid fa-user-plus"></i>
                    <% } else { %>
                        <i class="fa-regular fa-pen-to-square"></i> 
                        <% } %>
                    <%= buttonText %>
                </button>

                <a href="/inventory/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>
                    
                <% if(buttonText == "Modify"){ %>
                    <button onclick="location.href='/inventory/delete/<%= item._id %>'" type="button" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Remove</button>
                <% } %>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>